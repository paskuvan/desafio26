<%= form_with model: @todo, local: true do |t| %>
  <div class="alert alert-dismissible alert-info">
    <%= t.label :description, "Nombre de ToDo" %>
    <%= t.text_field :description %>

    <%= t.label :completed, "Perfecto!" %>
    <%= t.check_box :completed %>

    <%= t.submit "Finalizar", class:'btn btn-success' %>
  </div>
<% end %>
